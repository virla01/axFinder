{
  "compilerOptions": {
    "target": "ESNext",            // Especifica la versión de ECMAScript de destino
    "module": "ESNext",            // Especifica el sistema de módulos
    "outDir": ".",            // Directorio de salida para los archivos compilados
    "rootDir": ".",            // Directorio raíz de los archivos de entrada .ts
    "strict": true,                // Habilita todas las opciones de comprobación de tipo estricta
    "esModuleInterop": true,       // Permite la interoperabilidad con módulos CommonJS
    "skipLibCheck": true,          // Omite la comprobación de tipos de los archivos de declaración
    "forceConsistentCasingInFileNames": true, // Asegura la consistencia en el uso de mayúsculas y minúsculas en los nombres de archivo
    "moduleResolution": "node",    // Cómo resuelve el compilador los módulos
    "resolveJsonModule": true,     // Permite importar módulos .json
    "isolatedModules": true,       // Asegura que cada archivo pueda ser compilado de forma segura por separado
    // "sourceMap": true,          // Genera archivos .map para debugging (opcional, útil para desarrollo)
    // "noEmit": true,             // No emite archivos de salida (útil si otro bundler como Webpack se encarga)
    // "allowJs": true,            // Permite compilar archivos JavaScript (útil si tienes JS y TS mezclados)
    // "checkJs": true,            // Reporta errores en archivos .js (si allowJs está habilitado)
  },
  "include": [
    "**/*.ts"                // Patrón para incluir todos los archivos .ts en la carpeta src
  ],
  "exclude": [
    "node_modules",                // Excluye la carpeta node_modules
    "**/*.spec.ts"                 // Excluye archivos de prueba (si los tienes)
  ]
}